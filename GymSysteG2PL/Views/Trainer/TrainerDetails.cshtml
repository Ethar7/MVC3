@model TrainerViewModel
@using GymSystemG2AL.Entities.Enums

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-details border-0 p-2 shadow">
                
                <div class="text-center mt-3">
                    <img src="~/images/@Model.Photo" alt="@Model.Name"
                         class="rounded-circle"
                         style="width: 120px; height: 120px; object-fit: cover; border: 3px solid #fff; margin-top: -60px;" />
                </div>

                <div class="card-body text-center">
                    
                    <h2 class="mb-1 text-primary-color">@Model.Name</h2>
                    <h4 class="mb-2 pb-1 border-bottom d-block">
                        @(Model.Special.ToString())
                    </h4>

                    <div class="mt-4 text-start">
                        <div class="row g-3">
                           
                            <div class="col-12">
                                <div class="p-3 bg-light rounded">
                                    <small class="text-muted d-block mb-1">Email</small>
                                    <strong>@Model.Email</strong>
                                </div>
                            </div>

                          
                            <div class="col-12">
                                <div class="p-3 bg-light rounded">
                                    <small class="text-muted d-block mb-1">Phone</small>
                                    <strong>@Model.Phone</strong>
                                </div>
                            </div>

                           
                            <div class="col-6">
                                <div class="p-3 bg-light rounded">
                                    <small class="text-muted d-block mb-1">City</small>
                                    <strong>@Model.City</strong>
                                </div>
                            </div>

                           
                            <div class="col-6">
                                <div class="p-3 bg-light rounded">
                                    <small class="text-muted d-block mb-1">Street</small>
                                    <strong>@Model.Street</strong>
                                </div>
                            </div>

                            
                            <div class="col-12">
                                <div class="p-3 bg-light rounded">
                                    <small class="text-muted d-block mb-1">Building Number</small>
                                    <strong>@Model.BuildingNumber</strong>
                                </div>
                            </div>

                            
                            <div class="col-12">
                                <div class="p-3 bg-light rounded">
                                    <small class="text-muted d-block mb-1">Full Address</small>
                                    <strong>@($"{@Model.BuildingNumber} - {@Model.Street} - {@Model.City}")</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                   
                    <div class="d-flex justify-content-between gap-2 px-3 pb-3 mt-3">
                        <a asp-controller="Trainer" asp-action="Index" class="btn btn-fill flex-fill">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
